	#grade_program : Write a program to calculate grade of a student
	clear
	echo
	echo -n "Enter roll="
	read r
	echo -n "Enter total(0-100)="
	read t
		if [ $t -ge 70 ]
		then
		g="A"
			elif [ $t -ge 60 ]
			then
			g="B"
				elif [ $t -ge 50 ]
				then
				g="C"
					elif [ $t -ge 40 ]
					then
					g="D"
					else
					g="F"
		fi
	echo "Roll=$r Grade=$g"
	#end of program

