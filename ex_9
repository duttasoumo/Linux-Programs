	#ex_9: Write a program to input number lines say 'n'.
	# Display Floyd's triangle
	clear
	echo
	echo -n "Enter number lines(1-20)="
	read n
	num=0
	r=1
		while [ $r -le $n ]
		do
		c=1
			while [ $c -le $r ]
			do
			num=`expr $num + 1`
			echo -n $num
			echo -n "  "
			c=`expr $c + 1`
			done
		echo
		r=`expr $r + 1`
		done
	#end of program
	 
	
